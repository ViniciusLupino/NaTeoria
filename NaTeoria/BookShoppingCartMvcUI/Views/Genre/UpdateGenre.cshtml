@model GenreDTO
@{
    Layout = "_AdminLayout";
}
@* @Html.ValidationSummary() *@
<div style="max-width: 600px; margin: auto;">
    <h2 class="text-center" style="color: #2c3e50; font-weight: bold; margin-bottom: 20px;">Atualizar Gênero</h2>


    <!-- Formulário de Atualização de Gênero -->
    <form asp-action="UpdateGenre" style="border: 1px solid #2c3e50; padding: 20px; border-radius: 8px;">
        <input type="hidden" asp-for="Id" />

        <!-- Campo de Nome do Gênero -->
        <div class="mb-3">
            <label style="color: #2c3e50; font-weight: bold;">Gênero</label>
            <input type="text" class="form-control" asp-for="GeneroName" style="border-color: #2c3e50;" />
            <span asp-validation-for="GeneroName" class="text-danger"></span>
        </div>

        <!-- Botão Atualizar -->
        <div class="text-end">
            <button type="submit" class="btn" style="background-color: #2c3e50; color: white; padding: 10px 20px; font-weight: bold;">Atualizar</button>
            <a asp-action="Index" asp-controller="genre" class="btn" style="background-color: #7B8A8B; color: white; padding: 10px 20px;">Voltar</a>
        </div>
    </form>
</div>

