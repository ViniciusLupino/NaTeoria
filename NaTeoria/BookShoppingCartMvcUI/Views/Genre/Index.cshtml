@model IEnumerable<Genero>
@{
    Layout = "_AdminLayout";
}

<div style="max-width: 900px; margin: auto;">
    <h2 class="text-center" style="color: #2c3e50; font-weight: bold; margin-bottom: 20px;">Gêneros</h2>

    <!-- Botão de Adicionar Gênero -->
    <div class="text-end mb-3">
        <a asp-action="AddGenre" asp-controller="Genre" class="btn" style="background-color: #2c3e50; color: white; padding: 10px 16px; font-weight: bold;">Adicionar Novo</a>
    </div>

    <!-- Tabela de Gêneros -->
    <table class="table table-bordered table-hover" style="width: 100%; border-color:#2c3e50;">
        <thead style="background-color: #2c3e50; color: white;">
            <tr>
                <th>Gênero</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genero in Model)
            {
                <tr>
                    <td style="color: #2c3e50; font-weight: bold;">@genero.GeneroName</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genero.Id" class="btn" style="background-color: #2c3e50; color: white; padding: 6px 12px;">Editar</a>
                            <a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@genero.Id" class="btn" style="background-color: #7B8A8B; color: white; padding: 6px 12px;" onclick="return window.confirm('Tem certeza que deseja excluir?')">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



