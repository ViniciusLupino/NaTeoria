@model EstoqueDTO
@{
    Layout = "_AdminLayout";
}

<div class="container" style="max-width: 600px; margin: auto;">
    <h2 class="text-center" style="color: #2c3e50; font-weight: bold; margin-bottom: 20px;">Gerenciar Estoque</h2>

    <!-- Formulário de Atualização de Estoque -->
    <form asp-action="ManangeStock" style="border: 1px solid #2c3e50; padding: 20px; border-radius: 8px;">
        <input type="hidden" asp-for="ProdutoId" />

        <!-- Campo de Quantidade -->
        <div class="mb-3">
            <label class="form-label" style="color: #2c3e50; font-weight: bold;">Quantidade</label>
            <input type="number" class="form-control" asp-for="Quantity" style="border-color: #2c3e50;" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Botões de Ação -->
        <div class="d-flex flex-column flex-sm-row justify-content-end gap-2">
            <button type="submit" class="btn" style="background-color: #2c3e50; color: white;">Atualizar</button>
            <a asp-action="Index" asp-controller="Estoque" class="btn" style="background-color: #7B8A8B; color: white;">Voltar</a>
        </div>
    </form>
</div>




