@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div style="font-family: Arial, sans-serif; background-color: #f9f9f9; color: #2c3e50; padding: 20px;">
    <h1 style="color: #ffffff; background-color: #2c3e50; padding: 20px; border-radius: 5px; text-align: center;">
        Gerencie sua conta
    </h1>

    <div>
        <h2 style="color: #2c3e50; font-size: 1.5rem; margin-top: 20px; border-bottom: 2px solid #759B6A; padding-bottom: 10px;">
            Alterar configurações da conta
        </h2>
        <hr style="border-top: 1px solid #ddd; margin: 20px 0;" />

        <div style="display: flex; margin: 0 -15px;">
            <div style="padding: 15px; background-color: #eaeaea; border-radius: 5px; width: 25%;">
                <partial name="_ManageNav" />
            </div>

            <div style="padding: 15px; background-color: #ffffff; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 75%;">
                @RenderBody()
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @RenderSection("Scripts", required: false)
}
