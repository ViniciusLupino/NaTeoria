@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p style="font-size: 16px;">Sua conta contém dados pessoais que você nos forneceu. Esta página permite que você baixe ou exclua esses dados.</p>
        <p style="font-size: 16px;">
            <strong style="color: #2C3E50;">Excluir esses dados removerá permanentemente sua conta, e isso não poderá ser recuperado.</strong>
        </p>
        <div class="d-flex">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="me-2">
                <button class="btn btn-primary" type="submit" style="background-color: #2C3E50; border-color: #1A2A37; font-size: 16px; padding: 10px 20px;">Baixar</button>
            </form>
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger" style="background-color: #5D7F94; border-color: #3A5A72; color: #fff; font-size: 16px; padding: 10px 20px;">Excluir</a>
            </p>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
