@page
@model RegisterModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="text-white p-5 rounded" style="max-width: 700px; width: 100%; background-color: #274B33;">

        <section>
            <h2 class="text-center">Crie uma nova conta</h2>
            <p class="text-center">Preencha as informações para se cadastrar.</p>


            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="height: 35px; font-size: 14px; background-color: #ACC2A6;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" style="height: 35px; font-size: 14px; background-color: #ACC2A6;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirme a Senha</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" style="height: 35px; font-size: 14px; background-color: #ACC2A6;" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button id="registerSubmit" type="submit" class="btn" style="background-color: #759B6A; color: white; width: 160px; height: 40px;">Cadastrar</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p>Já tem uma conta? <a href="./login" class="text-white">Faça login</a></p>
            </div>
        </section>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
